		</constructor-arg>
	</bean>
-->

	<!-- Session Factory -->
	<bean id="sessionFactory"
		  class="org.springframework.orm.hibernate5.LocalSessionFactoryBean">
		<property name="dataSource" ref="dataSource"/>
		<property name="annotatedClasses">
			<list>
				<value>com.autodoc.model.Car</value>
				<value>com.autodoc.model.person.Client</value>
				<value>com.autodoc.model.person.Employee</value>
				<value>com.autodoc.model.Bill</value>
				<value>com.autodoc.model.CarModel</value>
				<value>com.autodoc.model.Manufacturer</value>
				<value>com.autodoc.model.Address</value>
				<value>com.autodoc.model.person.Provider</value>
				<value>com.autodoc.model.SubTask</value>
				<value>com.autodoc.model.Task</value>
				<value>com.autodoc.model.Piece</value>
				<value>com.autodoc.model.PieceType</value>
				<value>com.autodoc.model.Category</value>
				<value>com.autodoc.model.ExampleObject</value>


			</list>
		</property>
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">org.hibernate.dialect.PostgreSQL82Dialect</prop>
				<prop key="hibernate.hbm2ddl.auto">update</prop>
				<prop key="hibernate.show_sql">true</prop>
			</props>
		</property>
	</bean>

<!--	&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;-->


	<!-- turn on spring transaction annotation -->
	<tx:annotation-driven transaction-manager="transactionManager"/>

	<!-- Transaction Manager -->
	<bean id="transactionManager"
		  class="org.springframework.orm.hibernate5.HibernateTransactionManager">
		<property name="sessionFactory" ref="sessionFactory"/>
	</bean>

</beans>